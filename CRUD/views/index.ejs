<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="/index.css" />
  </head>
  <body>
    <h1>All Chats</h1>

    <form action="/chats/new" method="get">
      <Button>New Chat</Button>
    </form>
    <%for(let chat of chats){%>
    <div class="chat-container">
      <p class="info">From: <i><%=chat.from%></i></p>
      <p class="info">Received By: <i><%=chat.to%></i></p>
      <p class="msg">Message: <%=chat.message%></p>
      <form action="/chats/<%=chat._id%>/edit" method="get">
        <button>Edit</button>
      </form>

      <form action="/chats/<%=chat._id%>?_method=DELETE" method="post">
        <button style="margin-top: 10px;">Delete</button>
      </form>
    </div>
    <div style="color: white;">
      <p>Time: <%=chat.created_at.toString().split(" ")[4] %></p>
      <p>Date: <%=chat.created_at.toString().split(" ").slice(0,4).join(" ")%></p>
    </div>
    <hr />
    <%}%>
  </body>
</html>
